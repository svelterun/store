{
  "name": "@svelterun/store",
  "version": "0.0.0",
  "license": "MIT",
  "author": {
    "name": "Nicholas Berlette",
    "email": "nick@berlette.com",
    "url": "https://svelte.run"
  },
  "private": false,
  "publishConfig": {
    "access": "public",
    "tag": "next"
  },
  "types": "./dist/index.d.ts",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "esnext": "./dist/index.mjs",
  "unpkg": "./dist/index.mjs",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "default": "./dist/index.mjs"
    },
    "./": "./dist",
    "./package.json": "./package.json",
    "./index.d.ts": "./dist/index.d.ts",
    "./types": "./dist/index.d.ts"
  },
  "repository": "svelterun/store",
  "bugs": "https://github.com/svelterun/store/issues",
  "readme": "https://github.com/svelterun/store#readme",
  "homepage": "https://svelterun.com/pkg/store",
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --sourcemap --dts",
    "prepublishOnly": "nr test && nr lint",
    "prepare": "nr build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "release": "semantic-release",
    "test": "mocha --package ./package.json -n input-type=module -n experimental-modules \"test/**.test.*\""
  },
  "engine": {
    "node": ">=12"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "amd": true,
      "node": true
    },
    "root": true,
    "ignorePatterns": [
      "dist/"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended"
    ]
  },
  "mocha": {
    "require": [
      "ts-node-test-register"
    ]
  },
  "devDependencies": {
    "@antfu/ni": "latest",
    "@babel/core": "^7.16.0",
    "@babel/preset-env": "^7.16.4",
    "@types/node": "~17.0.5",
    "@typescript-eslint/eslint-plugin": "^5.5.0",
    "@typescript-eslint/parser": "^5.5.0",
    "eslint": "<8.0.0",
    "localforage": "^1.10.0",
    "mocha": "~9.1.3",
    "semantic-release": "18.0.1",
    "svelte": "^3.44.2",
    "ts-node": "~10.4.0",
    "ts-node-test-register": "~10.0.0",
    "tsup": "^5.10.0",
    "typescript": "^4.5.2"
  },
  "keywords": [
    "svelte",
    "localstorage",
    "svelterun",
    "store",
    "state"
  ],
  "files": [
    "dist"
  ],
  "peerDependencies": {
    "svelte": "^3.44.2"
  }
}
