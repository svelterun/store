{
  "name": "@svelterun/store",
  "version": "0.2.1",
  "license": "MIT",
  "author": {
    "name": "Nicholas Berlette",
    "email": "nick@berlette.com",
    "url": "https://svelte.run"
  },
  "private": false,
  "publishConfig": {
    "access": "public",
    "tag": "latest"
  },
  "release": {
    "branches": ["main"]
  },
  "types": "./dist/index.d.ts",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "esnext": "./dist/index.mjs",
  "unpkg": "./dist/index.mjs",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "default": "./dist/index.mjs"
    },
    "./": "./dist",
    "./package.json": "./package.json",
    "./index.d.ts": "./dist/index.d.ts",
    "./types": "./dist/index.d.ts"
  },
  "repository": "svelterun/store",
  "bugs": "https://github.com/svelterun/store/issues",
  "readme": "https://github.com/svelterun/store#readme",
  "homepage": "https://svelterun.com/pkg/store",
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts --minify --keep-names",
    "prepublishOnly": "npm run test && npm run lint",
    "prepare": "npm run build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "release": "semantic-release",
    "test": "echo 'No tests configured!' && exit 0"
  },
  "engine": {
    "node": ">=12"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "amd": true,
      "node": true
    },
    "root": true,
    "ignorePatterns": [
      "dist/"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended"
    ]
  },
  "devDependencies": {
    "@types/node": "~17.0.5",
    "@typescript-eslint/eslint-plugin": "^5.5.0",
    "@typescript-eslint/parser": "^5.5.0",
    "assert": "~2.0.0",
    "eslint": "^8.0.0",
    "semantic-release": "18.0.1",
    "svelte": "^3.44.2",
    "tsup": "^5.10.0",
    "typescript": "^4.5.2",
    "typescript-parser": "~2.6.1"
  },
  "keywords": [
    "svelte",
    "localstorage",
    "svelterun",
    "store",
    "state"
  ],
  "files": [
    "dist"
  ],
  "peerDependencies": {
    "svelte": "^3.44.2"
  }
}
